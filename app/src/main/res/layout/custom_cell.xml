<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_cell"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cell_bg"
    android:padding="9dp"
    android:orientation="vertical"
    android:textSize="14sp"
    android:textStyle="bold"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/events_container"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="right|top"
        android:layout_weight="0.5">
        <include layout="@layout/sample_line_view" />  <!-- TODO add dynamically a line for events -->
        <include layout="@layout/sample_line_view" />
        <include layout="@layout/sample_line_view" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:foregroundGravity="bottom|left"
        android:layout_gravity="bottom|left"
        android:layout_weight="0.5" />

</LinearLayout>