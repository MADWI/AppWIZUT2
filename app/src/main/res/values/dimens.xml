<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="nav_header_vertical_spacing">16dp</dimen>
    <dimen name="nav_header_height">160dp</dimen>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">8dp</dimen>
    <dimen name="activity_vertical_margin">8dp</dimen>
    <dimen name="fab_margin">16dp</dimen>

    <!-- Margin at bottom of (scrolled to bottom) list under FAB -->
    <dimen name="list_margin_bottom_for_fab">80dp</dimen>

    <!-- Cards in schedules (on Android 4 where we can't clip card) -->
    <dimen name="schedule_card_corner_radius">10dp</dimen>
    <dimen name="schedule_card_left_margin">10dp</dimen>
    <dimen name="schedule_card_highlighted_padding">7dp</dimen>

    <dimen name="event_line_height">2dp</dimen>
    <dimen name="body_of_card_min_height">45dp</dimen>

    <!-- Border of tile in sliding puzzle -->
    <dimen name="puzzle_piece_separator_width">2dp</dimen>

    <!-- Widget -->
    <dimen name="widget_padding">8dp</dimen>
    <dimen name="widget_refresh_button_margin">8dp</dimen>
    <dimen name="widget_refresh_button_size">24dp</dimen>

     <!-- Speed of widget refresh animation (ms per rotation, more is slower) -->
    <integer name="widget_refresh_anim_duration">800</integer>

    <!-- Card dragging -->
    <!-- Duration of card raising animation [ms] -->
    <integer name="card_drag_raise_duration">100</integer>
    <!--
    https://www.google.com/design/spec/what-is-material/elevation-shadows.html#elevation-shadows-elevation-android-
    6dp = 8dp (Card (when picked up)) - 2dp (Card (resting elevation))
    -->
    <dimen name="card_drag_raise_translate_z">6dp</dimen>
</resources>
